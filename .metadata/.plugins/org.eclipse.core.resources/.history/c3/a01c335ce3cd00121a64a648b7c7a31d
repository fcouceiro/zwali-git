		// TODO Auto-generated method stub
		
	}

	@Override
	public void dispose() {
		// TODO Auto-generated method stub
		backG = null;
		Player1 = null;
		enem.clear();
		bul.clear();
		Wavenr = 1;
		nWavesCur = 2;
		nWavesMAX = 2;
		nWave =2;
		WarmUp = true;
		
	}

